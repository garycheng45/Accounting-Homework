@model ICollection<Accounting.Models.ViewModel.AccountViewModel>

<div class="row">
	<div class="col-md-12">
		<table class="table table-bordered table-hover">
			<tr>
				<th>#</th>
				<th>日期</th>
				<th>類別</th>
				<th>金額</th>
				<th>備註</th>
			</tr>			
			
			@{
				int count = 0;
				foreach (var item in Model)
				{
					count++;
					<tr>
						<td> @count </td>
						<td> @item.Date</td>
						@{
							if (item.Type == Accounting.Models.ViewModel.AccountViewModel.E_Accou_Type.Income)
							{
								<td>收入</td>
							}
							else
							{
								<td>支出</td>
							}
						}
						<td>@item.Amount</td>

						<td>@item.Comment</td>
					</tr>
				}
			}
			

		</table>
	</div>
</div>